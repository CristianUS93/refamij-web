---
import Banner from "../../components/Banner.astro";
import Body from "../../components/Body.astro";
import Layout from "../../layouts/Layout.astro";
import FileContainer from "../../components/productos/FileContainer.astro";
import DescriptionContainer from "../../components/productos/DescriptionContainer.astro";

import banner from "../../assets/tienda/banner.jpg";
import data from "../../data/productos.json";

export async function getStaticPaths() {
    return data.flatMap((e) => {
        const productos = e.productos;
        const phone = e.phone;

        return productos.flatMap((e: Object) => {
            const tipos = e["tipos"];

            return tipos.flatMap((t: Object) => {
                const tipo = t;
                const tipoNombre = t["nombre"];

                return {
                    params: { producto: tipoNombre },
                    props: { tipo, phone },
                };
            });
        });
    });
}

interface Astro {
    tipo: Object;
    phone: string;
}

const { tipo, phone } = Astro.props;
---

<Layout path="/productos" , title_page="Refamij - Productos">
    <Banner title="PRODUCTOS INDUSTRIALES" img={banner.src} />
    <Body isGray="gray">
        <section class="main-info">
            <picture>
                <img id="main-img" src={tipo["img"][0]} alt="" />
                <div class="small-img">
                    {
                        tipo["img"].map((e) => (
                            <img
                                class={`small ${e == tipo["img"][0] && "img-select"}`}
                                src={e}
                                alt={tipo["nombre"]}
                            />
                        ))
                    }
                </div>
            </picture>
            <section class="tec-info">
                <h2>{tipo["nombre"]}</h2>
                <ul class="info-menu">
                    <li class="option o-select" id="d">Descripción</li>
                    <li class="option" id="f">Ficha Técnica</li>
                    <li class="option" id="v">Video</li>
                </ul>
                <div class="info-content">
                    <div class="content d">
                        <DescriptionContainer
                            title={tipo["nombre"]}
                            text={tipo["descripcion"]}
                            wspPhone={phone}
                            origen="productos"
                        />
                    </div>
                    <div class="content f">
                        <FileContainer
                            fileUrl={tipo["docs"]["fileUrl"]}
                            fileName={tipo["docs"]["fileName"]}
                            miniatura={tipo["docs"]["miniatura"]}
                        />
                    </div>
                    <div class="content v">
                        <iframe
                            width="560"
                            height="315"
                            src={tipo.video}
                            title="YouTube video player"
                            frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                            allowfullscreen></iframe>
                    </div>
                </div>
            </section>
        </section>
        <article>
            <h3>Aplicaciones</h3>
            <ul class="description">
                {tipo["aplicaciones"].map((e) => <li>{e}</li>)}
            </ul>
            <h3>Ventajas</h3>
            <ul class="description">
                {tipo["ventajas"].map((e) => (
                    <li><b style="font-weight:600">{e.slice(0,e.indexOf(':') + 1)}</b>{e.slice(e.indexOf(':') + 1)}</li>)
                )}
            </ul>
            <h3>Especificaciones Técnicas</h3>
            <ul class="description">
                {tipo["especificaciones"].map((e) => <li>{e}</li>)}
            </ul>
        </article>
    </Body>
</Layout>

<script>
    //Images changes
    const mainImg = document.getElementById("main-img");
    const images = document.getElementsByClassName("small");

    for (const image of images) {
        image.addEventListener("click", () => {
            mainImg["src"] = image["src"];
            var current = document.getElementsByClassName("img-select");
            current[0].className = current[0].className.replace(
                " img-select",
                "",
            );
            image.className += " img-select";
        });
    }

    //Tec-info changes
    const menuOptions = document.getElementsByClassName("option");
    const contentOptions = document.getElementsByClassName("content");
    for (const option of menuOptions) {
        option.addEventListener("click", () => {
            var current = document.getElementsByClassName("o-select");
            current[0].className = current[0].className.replace(
                " o-select",
                "",
            );
            option.className += " o-select";

            for (const content of contentOptions) {
                content["style"].display = "none";
                if (content.classList.contains(current[0].id)) {
                    content["style"].display = "block";
                }
            }
        });
    }
</script>

<style>
    .main-info {
        width: 90%;
        margin: 0 auto 4rem auto;
        display: flex;
    }

    /* Images */
    .main-info picture {
        width: 45%;
    }

    #main-img {
        height: 60vh;
        width: 100%;
        object-fit: scale-down;
        border: 1px solid var(--blue-refamij);
        border-radius: 10px;
    }
    .small-img {
        width: 100%;
    }
    .small-img {
        width: 100%;
        display: inline-flex;
        overflow-x: scroll;
    }
    .small {
        height: 12vh;
        width: 12vh;
        margin-right: 10px;
        object-fit: scale-down;
        border: 1px solid gray;
        border-radius: 10px;
    }

    .img-select {
        border: 2px solid var(--blue-refamij);
    }

    .small-img img:last-child {
        margin-right: 0;
    }

    .small-img::-webkit-scrollbar {
        height: 7px;
    }
    .small-img::-webkit-scrollbar-thumb {
        background: var(--light-blue);
        border-radius: 7px;
    }
    .small-img::-webkit-scrollbar-thumb:hover {
        background: var(--blue-refamij);
    }

    /* Article */
    article {
        width: 90%;
        margin: 0 auto;
    }

    h2,
    h3 {
        margin-bottom: 1rem;
    }
    .description {
        margin-bottom: 3rem;
    }

    article li {
        padding-bottom: 3px;
    }

    /* Tec Info */
    .tec-info {
        width: 50%;
        margin-left: 3rem;
        padding: 1.5rem;
        box-shadow: 2px 2px 20px 2px gray;
    }

    .tec-info h2 {
        color: var(--blue-refamij);
    }

    .info-menu {
        display: flex;
        border-bottom: 1px solid gray;
    }

    .option {
        font-weight: 500;
        padding: 1rem 2rem;
        cursor: pointer;
    }
    .o-select {
        border-bottom: 4px solid var(--blue-refamij);
    }

    .info-content {
        height: 50vh;
        width: 100%;
    }

    .content {
        padding-top: 1.5rem;
        height: 100%;
        width: 100%;
    }

    .d {
        display: block;
    }

    .f {
        display: none;
    }

    .v {
        display: none;
    }

    .v > iframe {
        width: 100%;
        background-color: rgb(250, 250, 250);
    }

    @media screen and (max-width: 1025px) {
        .main-info {
            flex-direction: column;
        }
        .main-info picture,
        .main-info .tec-info {
            width: 100%;
        }

        .main-info picture {
            margin-bottom: 1rem;
        }
        .main-info .tec-info {
            margin-left: 0;
        }
    }

    @media screen and (max-width: 600px) {
        h2 {
            font-size: 18px;
        }
        h3 {
            font-size: 16px;
        }
        p {
            font-size: 13px;
        }
        .tec-info {
            padding: 1rem;
        }
        .option {
            font-size: 14px;
            padding: 0.5rem 1rem;
        }
    }

    @media screen and (max-width: 450px) {
        .tec-info {
            width: 95%;
        }
        .option {
            font-size: 13px;
            padding: 0.2rem 0.7rem;
        }
    }
</style>
