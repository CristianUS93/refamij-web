---
interface Props {
    img: string;
    title: string;
    route: string;
}

const { img, title, route } = Astro.props;

---
<div class="product-card">
    <img src={img} alt="producto" />
    <h3>{title}</h3>
    <a href={route}>
        <div class="button">
            Ver Producto
        </div>
    <a/>
</div>

<style>
    .product-card {
        background-color: white;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    .product-card img {
        height: 200px;
        width: 80%;
        display: flex;
        object-fit: scale-down;
        margin: 0 auto;
        margin-top: 2rem;
    }
    .product-card h3 {
        margin: 1rem 2rem 2rem 2rem;
    }
    a {
        color: black;
        font-weight: 700;
    }
    .button {
        display: inline-block;
        margin: 0 0 2rem 2rem;
        padding: 1rem;
        background-color: var(--yellow);
    }
</style>