---
import wspLogo from "../../assets/icons-social/whatsapp.svg";

const { title, text, wspPhone } = Astro.props;
---
<div class="main-div">
    <p>{text}</p>
    <div class="buttons-div">
        <a href={`https://wa.me/${wspPhone}?text=Buenos%20días.%20Quisiera%20hacer%20algunas%20consultas%20sobre%20${title}.`} target="_blank">
            <div class="wsp button">
                <img src={wspLogo.src} alt="Whatsapp Logo">
                <span>Conversa con nuestro especialista en línea</span>
            </div>
        </a>
        <a href="">
            <div class="cot button">
                <span>Cotizar ahora</span>
            </div>
        </a>
    </div>
</div>

<style>
    .main-div {
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    .buttons-div {
        display: flex;
        flex-wrap: wrap;
    }

    .button {
        height: 60px;
        max-width: 250px;
        padding: 0.7rem;
        color: white;
        font-weight: 500;
        display: flex;
        align-items: center;
        border-radius: 5px;
        box-shadow: 2px 2px 5px rgba(0,0,0,0.5);
        transition: all 0.5s;
    }
    
    .button:hover {
        transform: scale(1.1);
        box-shadow: 2px 2px 10px rgba(0,0,0,0.5);
    }

    .wsp {
        background-color: rgb(21, 179, 21);
        margin-right: 2rem;
    }
    .wsp img {
        padding-right: 5px;
    }

    .cot {
        background-color: red;
    }

    @media screen and (max-width: 500px) {
        .buttons-div {
            flex-direction: column;
            align-items: center;
        }
        .wsp {
            margin-right: 0;
            margin-bottom: 1rem;
        }
    }
    @media screen and (max-width: 450px) {
        p {
            font-size: 13px;
        }
    }
</style>