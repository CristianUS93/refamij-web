---
const { isGray } = Astro.props;
---
<main class:list={['box', { gray: isGray }]}>
    <slot />
</main>

<style>
    main {
        background-color: white;
        width: 100%;
        padding: 3rem 0;
    }

    .gray {
        background-color: var(--light-gray);
    }

    @media screen and (max-width: 300px) {
        main {
            padding: 1.5rem 0;
        }
    }
</style>