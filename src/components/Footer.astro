</footer>

<style>
    footer {
        width: 100%;
        background-color: var(--blue-refamij);
        text-align: center;
    }

    section {
        padding: 1.5rem 0 0.5rem 0;
        width: 90%;
        display: inline-flex;
        justify-content: space-between;
    }

    .logo {
        height: 100px;
        width: 100px;
    }

    .container {
        text-align: left;
        margin: 0 1rem 1rem 1em;
    }

    h2 {
        color: white;
        font-size: 16px;
        margin-bottom: 10px;
    }

    ul {
        padding: 0;
    }

    .info li {
        margin-bottom: 5px;
        display: flex;
        flex-direction: row;
        align-items: center;
    }

    .info > li > div {
        height: 24px;
        width: 24px;
        border-radius: 12px;
        background-color: white;
        margin-right: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .info > li > div > i {
        font-size: 14px;
        color: var(--blue-refamij);
    }

    .info p {
        color: white;
        font-size: 12px;
    }

    .social {
        display: inline-flex;
    }

    .social div {
        width: 30px;
        height: 30px;
        background: white;
        margin-right: 10px;
        border-radius: 15px;
        display: flex;
        justify-content: center;
    }

    .social div:hover {
        transform: scale(1.1);
        transition: all 200ms ease-in-out;
    }

    .social div img {
        height: 30px;
        display: block;
        margin: auto;
    }

    .rights {
        margin: 0;
        padding: 5px 0;
        color: white;
    }

    @media screen and (max-width: 1200px) {
        section {
            width: 100%;
        }
    }

    @media screen and (max-width: 900px) {
        section {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            padding: 50px 0px;
        }

        .logo {
            display: none;
        }

        .container {
            width: 40%;
        }

        p {
            margin: 0px 0px;
        }
    }

    @media screen and (max-width: 550px) {
        .container {
            width: 70%;
        }
    }
</style>
